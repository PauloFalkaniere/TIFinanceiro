<h1>Orçamentos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.name %></td>
        <td><%= budget.value %></td>
        <td><%= budget.description %></td>
        <td><%= link_to '', budget, class: 'fa fa-caret-square-o-right' %></td>
        <td><%= link_to '', edit_budget_path(budget), class: "fa fa-pencil" %></td>
        <td><%= link_to '', budget, method: :delete, data: { confirm: 'Tem certeza que deseja excluir ?' }, class: 'fa fa-trash-o' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to new_budget_path do %>
  Novo <i class='fa fa-plus'></i>
<% end %>