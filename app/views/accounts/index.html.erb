<h1>Contas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Total</th>
      <th>Descrição</th>
      <th>Orçamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.total %></td>
        <td><%= account.description %></td>
        <td><%= account.budget_id %></td>
        <td><%= link_to '', account, class: 'fa fa-caret-square-o-right' %></td>
        <td><%= link_to '', edit_account_path(account), class: "fa fa-pencil" %></td>
        <td><%= link_to '', account, method: :delete, data: { confirm: 'Tem certeza que deseja excluir ?' }, class: 'fa fa-trash-o' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_account_path do %>
  Novo <i class='fa fa-plus'></i>
<% end %>